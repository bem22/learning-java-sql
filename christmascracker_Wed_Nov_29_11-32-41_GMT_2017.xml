    <path refid="library.maven:_org.junit.platform:junit-platform-commons:1.1.0-m1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.christmascracker">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.christmascracker">
    <patternset refid="excluded.from.module.christmascracker"/>
  </patternset>
  
  <path id="christmascracker.module.sourcepath">
    <dirset dir="${module.christmascracker.basedir}">
      <include name="src/java"/>
      <include name="src/resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.christmascracker" depends="compile.module.christmascracker.production,compile.module.christmascracker.tests" description="Compile module ChristmasCracker"/>
  
  <target name="compile.module.christmascracker.production" depends="register.custom.compilers" description="Compile module ChristmasCracker; production classes">
    <mkdir dir="${christmascracker.output.dir}"/>
    <javac2 destdir="${christmascracker.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.christmascracker}/javac">
      <compilerarg line="${compiler.args.christmascracker}"/>
      <bootclasspath refid="christmascracker.module.bootclasspath"/>
      <classpath refid="christmascracker.module.production.classpath"/>
      <src refid="christmascracker.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.christmascracker"/>
    </javac2>
    
    <copy todir="${christmascracker.output.dir}">
      <fileset dir="${module.christmascracker.basedir}/src/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.christmascracker.basedir}/src/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.christmascracker.tests" depends="register.custom.compilers,compile.module.christmascracker.production" description="compile module ChristmasCracker; test classes" unless="skip.tests"/>
  
  <target name="clean.module.christmascracker" description="cleanup module">
    <delete dir="${christmascracker.output.dir}"/>
    <delete dir="${christmascracker.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.christmascracker, clean.artifact.christmascracker" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.christmascracker" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.christmascracker" value="${basedir}/out/artifacts/ChristmasCracker"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.ChristmasCracker" value="${artifacts.temp.dir}/ChristmasCracker.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.1.8}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.christmascracker" description="clean ChristmasCracker artifact output">
    <delete dir="${artifact.output.christmascracker}"/>
  </target>
  
  <target name="artifact.christmascracker" depends="init.artifacts, compile.module.christmascracker" description="Build &#39;ChristmasCracker&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.christmascracker}"/>
    <copy todir="${artifact.temp.output.ChristmasCracker}">
      <fileset dir="${christmascracker.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_ChristmasCracker" dir="${artifact.temp.output.ChristmasCracker}" includes="**/*.jar">
      <exclude name="ChristmasCracker.jar"/>
    </fx:fileset>
    <fx:fileset id="all_ChristmasCracker" dir="${artifact.temp.output.ChristmasCracker}" includes="**/*.jar"/>
    <fx:application id="ChristmasCracker_id" name="ChristmasCracker" mainClass="_app"/>
    <fx:jar destfile="${artifact.temp.output.ChristmasCracker}/ChristmasCracker.jar">
      <fx:application refid="ChristmasCracker_id"/>
      <fileset dir="${artifact.temp.output.ChristmasCracker}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_ChristmasCracker"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value="Databases"/>
        <attribute name="Implementation-Version" value=""/>
        <attribute name="Implementation-Vendor" value="Mihai"/>
      </manifest>
    </fx:jar>
    <fx:deploy width="1300" height="710" updatemode="background" outdir="${artifact.temp.output.ChristmasCracker}/deploy" outfile="ChristmasCracker">
      <fx:application refid="ChristmasCracker_id"/>
      <fx:info title="Databases" vendor="Mihai" description="Databases Application"/>
      <fx:resources>
        <fx:fileset refid="all_ChristmasCracker"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.christmascracker}">
      <fileset dir="${artifact.temp.output.ChristmasCracker}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.ChristmasCracker}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.christmascracker" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>