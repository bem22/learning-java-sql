  </path>
  
  <path id="library.maven:_org.junit.platform:junit-platform-engine:1.0.2.classpath">
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-engine/1.0.2/junit-platform-engine-1.0.2.jar"/>
