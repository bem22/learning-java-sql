    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module ChristmasCracker -->
  
  <dirname property="module.christmascracker.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.christmascracker" value="${jdk.home.1.8}"/>
  <property name="module.jdk.bin.christmascracker" value="${jdk.bin.1.8}"/>
  <property name="module.jdk.classpath.christmascracker" value="jdk.classpath.1.8"/>
  
